<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.SysRoleDao">
    <insert id="add" parameterType="SysRole">
        INSERT INTO sys_role(role_id,role_name,role_status,role_remark)
        VALUES(#{roleId},#{roleName},#{roleStatus},#{roleRemark})
    </insert>

    <select id="get" resultType="SysRole">
        SELECT * FROM sys_role
    </select>

    <delete id="del" parameterType="Long">
        DELETE FROM sys_role
        WHERE role_id=#{id}
    </delete>

    <update id="upd" parameterType="SysRole">
        UPDATE sys_role
        SET role_name=#{roleName},role_status=#{roleStatus},role_remark=#{roleRemark}
        WHERE role_id=#{roleId}
    </update>

    <insert id="addPerms" parameterType="Long">
        INSERT INTO sys_role_perms(rp_role_id,rp_perms_id)
        VALUES(#{rprRoleId},#{rprPermsId})
    </insert>

    <select id="getRolePerms" parameterType="Long" resultType="Long">
        SELECT rp_perms_id
        FROM sys_role_perms
        WHERE rp_role_id=#{id}
    </select>

    <delete id="delPerms" parameterType="Long">
        DELETE FROM sys_role_perms
        WHERE rp_role_id=#{id}
    </delete>

    <insert id="addFromExcel" parameterType="ExcelRole">
        INSERT INTO sys_role(role_id,role_name,role_status,role_remark)
        VALUES
        <foreach collection="params" item="r">
            (#{r.roleId},#{r.roleName},#{r.roleStatus},#{r.roleRemark})
        </foreach>
    </insert>

    <select id="getById" parameterType="Long" resultType="SysRole">
        SELECT * FROM sys_role
        WHERE role_id=#{id}
    </select>

    <select id="verify" parameterType="String" resultType="Long">
        SELECT role_id
        FROM sys_role
        WHERE role_name=#{key}
    </select>

    <select id="getByKeyword" parameterType="String" resultType="SysRole">
        SELECT * FROM sys_role
        WHERE role_name LIKE concat('%',#{keyword},'%')
    </select>
</mapper>