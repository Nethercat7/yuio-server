<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.SysDictDataDao">
    <insert id="add" parameterType="SysDictData">
        INSERT INTO sys_dict_data(dict_id,dict_label,dict_type,dict_value,dict_status,dict_remark)
        VALUES (#{dictId},#{dictLabel},#{dictType},#{dictValue},#{dictStatus},#{dictRemark})
    </insert>

    <select id="get" resultType="SysDictData" parameterType="String">
        SELECT * FROM sys_dict_data
        WHERE dict_type=#{dictType}
    </select>

    <delete id="del" parameterType="Long">
        DELETE FROM sys_dict_data
        WHERE dict_id=#{id}
    </delete>

    <update id="upd" parameterType="SysDictData">
        UPDATE sys_dict_data
        SET dict_label=#{dictLabel},dict_value=#{dictValue},dict_status=#{dictStatus},dict_remark=#{dictRemark}
        WHERE dict_id=#{dictId}
    </update>

    <select id="getByKeyword" parameterType="String" resultType="SysDictData">
         SELECT * FROM sys_dict_data
         WHERE dict_type=#{dictType}
         AND dict_label LIKE concat('%',#{keyword},'%')
    </select>
</mapper>