<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.SysUsrDao">
    <insert id="add" parameterType="SysUser">
        INSERT INTO sys_user(user_id,user_name,user_code,user_gender,user_phone,user_email,user_status,user_remark,user_pwd,user_salt)
        VALUES (#{userId},#{userName},#{userCode},#{userGender},#{userPhone},#{userEmail},#{userStatus},#{userRemark},#{userPwd},#{userSalt})
    </insert>

    <select id="get" resultType="SysUser">
        SELECT user_id,user_name,user_code,user_gender,user_phone,user_email,user_status,user_remark
        FROM sys_user
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM sys_user
        WHERE user_id=#{id}
    </delete>

    <update id="upd" parameterType="SysUser">
        UPDATE sys_user
        SET user_name=#{userName},user_code=#{userCode},user_gender=#{userGender},user_phone=#{userPhone},user_email=#{userEmail},user_status=#{userStatus},
        user_remark=#{userRemark}
        WHERE user_id=#{userId}
    </update>

    <insert id="addRole" parameterType="String">
        INSERT INTO sys_user_role(ur_id,ur_user_id,ur_role_id)
        VALUES(#{id},#{userId},#{roleId})
    </insert>

    <select id="getRoles" parameterType="String" resultType="String">
        SELECT ur_role_id FROM sys_user_role
        WHERE ur_user_id=#{id}
    </select>

    <delete id="delRole" parameterType="String">
        DELETE FROM sys_user_role
        WHERE ur_user_id=#{id}
    </delete>

    <select id="getByCode" parameterType="String" resultType="SysUser">
        SELECT user_id,user_name,user_code,user_gender,user_phone,user_email,user_status,user_remark
        FROM sys_user
        WHERE user_code=#{param}
    </select>
</mapper>