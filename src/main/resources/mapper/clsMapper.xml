<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.ClsDao">
    <insert id="add" parameterType="SysClass">
        INSERT INTO sys_class(class_id,class_name,class_status,class_remark,class_major_id,class_grade,class_college_id)
        VALUES (#{classId},#{className},#{classStatus},#{classRemark},#{classMajorId},#{classGrade},#{classCollegeId})
    </insert>

    <select id="get" resultType="SysClass">
        SELECT * FROM sys_class
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM sys_class
        WHERE class_id=#{id}
    </delete>

    <update id="upd" parameterType="SysClass">
        UPDATE sys_class
        SET class_name=#{className},class_status=#{classStatus},class_remark=#{classRemark},class_major_id=#{classMajorId},class_grade=#{classGrade},class_college_id=#{classCollegeId}
        WHERE class_id=#{classId}
    </update>

    <select id="getByPid" parameterType="String" resultType="SysClass">
        SELECT * FROM sys_class
        WHERE class_major_id=#{pid}
        <if test="grade!=0">
            AND class_grade=#{grade}
        </if>
    </select>

    <select id="getNameById" parameterType="String" resultType="String">
        SELECT class_name FROM sys_class
        WHERE class_id=#{id}
    </select>
</mapper>