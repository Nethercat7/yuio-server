<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.ClsDao">
    <insert id="add" parameterType="Cls">
        INSERT INTO cls(cls_id,cls_name,cls_status,cls_description,cls_major_id,cls_grade,cls_college_id)
        VALUES (#{clsId},#{clsName},#{clsStatus},#{clsDescription},#{clsMajorId},#{clsGrade},#{clsCollegeId})
    </insert>

    <select id="get" resultType="Cls">
        SELECT * FROM cls
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM cls
        WHERE cls_id=#{id}
    </delete>

    <update id="upd" parameterType="Cls">
        UPDATE cls
        SET cls_name=#{clsName},cls_status=#{clsStatus},cls_description=#{clsDescription},cls_major_id=#{clsMajorId},cls_grade=#{clsGrade},cls_college_id=#{clsCollegeId}
        WHERE cls_id=#{clsId}
    </update>

    <select id="getByPid" parameterType="String" resultType="Cls">
        SELECT * FROM cls
        WHERE cls_major_id=#{pid}
    </select>

    <select id="getNameById" parameterType="String" resultType="String">
        SELECT cls_name FROM cls
        WHERE cls_id=#{id}
    </select>
</mapper>