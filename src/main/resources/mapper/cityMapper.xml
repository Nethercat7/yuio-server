<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.CityDao">
    <insert  id="add" parameterType="City">
        INSERT INTO city(city_id,city_name,city_pid,city_status,city_level)
        VALUES(#{cityId},#{cityName},#{cityPid},#{cityStatus},#{cityLevel})
    </insert>

    <select id="get" resultType="City">
        SELECT * FROM city
        WHERE city_level=0 OR city_level=1
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM city
        WHERE city_id=#{id}
    </delete>

    <update id="upd" parameterType="City">
        UPDATE city
        SET city_name=#{cityName},city_pid=#{cityPid},city_status=#{cityStatus},city_level=#{cityLevel}
        WHERE city_id=#{cityId}
    </update>

    <select id="getById" parameterType="String" resultType="City">
        SELECT * FROM city
        WHERE city_id=#{id}
    </select>
</mapper>