<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.RoleDao">
    <insert id="add" parameterType="Role">
        INSERT INTO role(role_id,role_name,role_pid,role_status,role_description)
        VALUES(#{roleId},#{roleName},#{rolePid},#{roleStatus},#{roleDescription})
    </insert>

    <select id="get" resultType="Role">
        SELECT * FROM role
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM role
        WHERE role_id=#{id}
    </delete>

    <update id="upd" parameterType="Role">
        UPDATE role
        SET role_name=#{roleName},role_pid=#{rolePid},role_status=#{roleStatus},role_description=#{roleDescription}
        WHERE role_id=#{roleId}
    </update>

    <insert id="addPerms" parameterType="String">
        INSERT INTO role_perms_relation(rpr_id,rpr_role_id,rpr_perms_id)
        VALUES(#{rprId},#{rprRoleId},#{rprPermsId})
    </insert>

    <select id="getRolePerms" parameterType="String" resultType="String">
        SELECT rpr_perms_id
        FROM role_perms_relation
        WHERE rpr_role_id=#{id}
    </select>

    <delete id="delPerms" parameterType="String">
        DELETE FROM role_perms_relation
        WHERE rpr_role_id=#{id}
    </delete>
</mapper>