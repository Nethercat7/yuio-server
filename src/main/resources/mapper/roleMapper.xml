<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.RoleDao">
    <insert id="add" parameterType="Role">
        INSERT INTO role(role_id,role_name,role_pid,role_status,role_description)
        VALUES(#{roleId},#{roleName},#{rolePid},#{roleStatus},#{roleDescription})
    </insert>

    <select id="get" resultType="Role">
        SELECT * FROM role
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM role
        WHERE role_id=#{id}
    </delete>
</mapper>