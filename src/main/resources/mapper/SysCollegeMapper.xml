<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.SysCollegeDao">
    <insert id="add" parameterType="SysCollege">
        INSERT INTO sys_college(college_id,college_name,college_status,college_remark)
        VALUES (#{collegeId},#{collegeName},#{collegeStatus},#{collegeRemark})
    </insert>

    <select id="get" resultType="SysCollege">
        SELECT * FROM sys_college
    </select>

    <delete id="del" parameterType="Long">
        DELETE FROM sys_college
        WHERE college_id=#{id}
    </delete>

    <update id="upd" parameterType="SysCollege">
        UPDATE sys_college
        SET college_name=#{collegeName},college_status=#{collegeStatus},college_remark=#{collegeRemark}
        WHERE college_id=#{collegeId}
    </update>

    <select id="getById" parameterType="Long" resultType="SysCollege">
        SELECT * FROM sys_college
        WHERE college_id=#{id}
    </select>

    <select id="getByKeyword" parameterType="String" resultType="SysCollege">
        SELECT * FROM sys_college
        WHERE college_name LIKE concat('%',#{keyword},'%')
    </select>

    <insert id="addFromExcel" parameterType="ExcelCollege">
        INSERT INTO sys_college(college_id,college_name,college_status,college_remark)
        VALUES
        <foreach collection="params" item="c">
            (#{c.collegeId},#{c.collegeName},#{c.collegeStatus},#{c.collegeRemark})
        </foreach>
    </insert>
</mapper>