<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.CollegeDao">
    <insert id="add" parameterType="SysCollege">
        INSERT INTO sys_college(college_id,college_name,status,remark)
        VALUES (#{collegeId},#{collegeName},#{status},#{remark})
    </insert>

    <select id="get" resultType="SysCollege">
        SELECT * FROM sys_college
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM sys_college
        WHERE college_id=#{id}
    </delete>

    <update id="upd" parameterType="SysCollege">
        UPDATE sys_college
        SET college_name=#{collegeName},status=#{status},remark=#{remark}
        WHERE college_id=#{collegeId}
    </update>

    <select id="getById" parameterType="String" resultType="SysCollege">
        SELECT * FROM sys_college
        WHERE college_id=#{id}
    </select>

    <select id="getNameById" parameterType="String" resultType="String">
        SELECT college_name FROM sys_college
        WHERE college_id=#{id}
    </select>
</mapper>