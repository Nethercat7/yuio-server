<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfy.yuio.dao.CollegeDao">
    <insert id="add" parameterType="College">
        INSERT INTO college(college_id,college_name,college_code,college_status,college_description)
        VALUES (#{collegeId},#{collegeName},#{collegeCode},#{collegeStatus},#{collegeDescription})
    </insert>

    <select id="get" resultType="College">
        SELECT * FROM college
    </select>

    <delete id="del" parameterType="String">
        DELETE FROM college
        WHERE college_id=#{id}
    </delete>

    <update id="upd" parameterType="College">
        UPDATE college
        SET college_name=#{collegeName},college_code=#{collegeCode},college_status=#{collegeStatus},college_description=#{collegeDescription}
        WHERE college_id=#{collegeId}
    </update>

    <select id="getById" parameterType="String" resultType="College">
        SELECT * FROM college
        WHERE college_id=#{id}
    </select>

    <select id="getNameById" parameterType="String" resultType="String">
        SELECT college_name FROM college
        WHERE college_id=#{id}
    </select>
</mapper>